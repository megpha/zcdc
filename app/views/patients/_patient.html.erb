<div class="row well">
  <div class="col-xs-6 col-md-4">
    <h6> <%= patient.full_name %> </h6>
    <small><%= patient.address1 %> </small>
    <p> <small><%= patient.city %> </small> </p>
    <p> <strong>Weight:</strong> <%= patient.current_appointment.weight_in_kgs %> </p>
    <p> <strong>Height:</strong> <%= patient.current_appointment.height_in_cms %> </p>
    <p> <strong>Blood Pressure:</strong> <%= patient.current_appointment.blood_pressure %> </p>
    <p> <strong>Issue:</strong> <%= patient.current_appointment.issue %> </p>
  </div>

  <div class="col-xs-6 col-md-4">
    <%= form_for(patient.current_appointment) do |f| %>
      <div class="form-group">
        <%= f.text_area :prescription, class: 'form-control', rows: 5, placeholder: 'Prescription' %>
      </div>

      <div class="form-group">
        <%= f.text_area :notes, class: 'form-control', rows: 5, placeholder: 'Notes' %>
      </div>

      <div class="form-group">
        <%= f.submit class: 'btn btn-info' %>
      </div>
    <% end %>
  </div>
</div>
