<div class="row">
  <div class="col-sm-10">
    <%= form_for(@patient) do |f| %>
      <% if @patient.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

          <ul>
            <% @patient.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="col-sm-10">
        <div class="form-group">
          <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
        </div>
      </div>

      <div class="col-sm-10">
        <div class="form-group">
          <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
        </div>
      </div>

      <div class="col-sm-10">
        <div class="form-group">
          <%= f.text_field :address1, class: 'form-control', placeholder: 'Address1' %>
        </div>
      </div>

      <div class="col-sm-10">
        <div class="form-group">
          <%= f.text_field :address2, class: 'form-control', placeholder: 'Address2' %>
        </div>
      </div>

      <div class="col-sm-10">
        <div class="form-group">
          <%= f.text_field :city, class: 'form-control', placeholder: 'City' %>
        </div>
      </div>

      <div class="col-sm-10">
        <div class="form-group">
          <%= f.text_field :phone1, class: 'form-control', placeholder: 'Phone1' %>
        </div>
      </div>

      <div class="col-sm-10">
        <div class="form-group">
          <%= f.text_field :phone2, class: 'form-control', placeholder: 'Phone' %>
        </div>
      </div>

      <div class="col-sm-10">
        <div class="form-group">
          <%= f.text_field :date_of_birth, class: 'form-control', placeholder: 'dd-mm-yyyy' %>
        </div>
      </div>

      <div class="col-sm-10">
        <div class="form-group">
          <%= f.submit class: 'btn btn-primary' %>
          <%= link_to 'Cancel', patients_path, class: 'btn btn-danger' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
