        </div>
        <div class="col-xs-6 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.text_field :first_name, class: 'form-control input-sm', placeholder: 'First Name' %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.text_field :phone1, class: 'form-control', placeholder: 'Phone Number' %>
      </div>

      <div class="form-group">
        <%= f.submit class: 'btn btn-info btn-block' %>
      </div>
    </div>
  <% end %>
</div>
</div>
