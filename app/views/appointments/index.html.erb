<div class="row">
  <div class="col-xs-8 col-md-10">
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Patient</th>
          <th>Starts at</th>
          <th>Information</th>
          <th>Remove</th>
        </tr>
      </thead>

      <tbody>
        <% @appointments.each do |appointment| %>
          <tr>
            <td><%= link_to appointment.patient.full_name, appointment.patient %></td>
            <td><%= appointment.starts_at.strftime("%I:%M%p") %></td>
            <td>
              <%= link_to [:edit, appointment], class: 'btn'  do %>
                <span class="glyphicon glyphicon-edit"></span>
              <% end %>
            </td>
            <td>
              <%= link_to  appointment, data: { confirm:  "Do you want to delete this appointment" }, method: :delete, class: 'btn' do %>
                <span class="glyphicon glyphicon-trash"></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
