<table class="table table-striped">
  <thead>
    <tr>
      <th>Patient</th>
      <th>Starts at</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.patient.full_name %></td>
        <td><%= appointment.starts_at.strftime("%I:%M%p") %></td>
        <td>
          <%= link_to appointment.patient, class: 'btn' do %>
            <span class="fui-user"></span>
          <% end %>
        </td>
        <td>
          <%= link_to [appointment.patient, appointment], class: 'btn', data: { confirm: "Is patient seeing doctor?" } do %>
            <span class="glyphicon glyphicon-log-in"></span>
          <% end %>
        </td>
        <td>
          <%= link_to [appointment.patient, appointment], data: { confirm:  "Do you want to delete this appointment" }, method: :delete, class: 'btn' do %>
            <span class="glyphicon glyphicon-ban-circle"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
