<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="login-screen">
      <div class="login-form">
        <div class="form-group">
          <%= f.email_field :email, class: 'form-control login-field', placeholder: "Enter your email", autofocus: true %>
          <%= f.label :email, class: 'login-field-icon fui-user' do %>
          <% end  %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, class: 'form-control login-field', placeholder: "Password", autocomplete: "off" %>
          <%= f.label :password, autocomplete: "off", class: 'login-field-icon fui-lock' do %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, class: 'form-control login-field', placeholder: "Password", autocomplete: "off" %>
          <%= f.label :password_confirmation, autocomplete: "off", class: 'login-field-icon fui-lock' do %>
          <% end %>
        </div>

        <div><%= f.submit "Sign up", class: 'btn btn-primary btn-lg btn-block' %></div>

        <div class="form-group">
          <%= " " %>
        </div>

        <div class="form-group">
          <%= render "devise/shared/links" %>
        </div>

      </div>
    </div>
<% end %>



