<h5> <font color="#228b22"> Forgot your password? </font> </h5>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="login-screen">
      <div class="login-form">

        <div class="form-group">
              <%= f.email_field :email, class: 'form-control login-field', placeholder: "Enter your email", autofocus: true %>
          <%= f.label :email, class: 'login-field-icon fui-user' do %>
          <% end %>
        </div>


        <div><%= f.submit "Send me reset password instructions", class: 'btn btn-primary btn-lg btn-block' %></div>

        <div class="form-group">
          <%= " " %>
        </div>

        <%= render "devise/shared/links" %>

      </div>
    </div>
<% end %>


