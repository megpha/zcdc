<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="login-screen">
  <div class="login-form">
    <div class="form-group">
      <%= f.email_field :email, class: 'form-control login-field', placeholder: "Enter your email",autofocus: true %>
      <%= f.label :email, class: 'login-field-icon fui-user' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, class: 'form-control login-field', placeholder: "Password",autocomplete: "off" %>
      <%= f.label :password, class: 'login-field-icon fui-user' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

    <div><%= f.submit "Sign in", class: 'btn btn-primary btn-lg btn-block' %></div>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
