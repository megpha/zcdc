<div>
  <%= image_tag("doctorband.png", height: "180", width: "1150", class: "btn btn-block") %>

  <h3 align="center"><font color="#228b22"> Sign in </font></h3>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="login-screen">
        <div class="login-form">

          <div class="form-group">
            <%= f.email_field :email, class: 'form-control login-field', placeholder: "Enter your email",autofocus: true %>
            <%= f.label :email, class: 'login-field-icon fui-user' do %>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, class: 'form-control login-field', placeholder: "Password",autocomplete: "off" %>
            <%= f.label :password, class: 'login-field-icon fui-lock' do %>
            <% end %>
          </div>

          <% if devise_mapping.rememberable? -%>
              <div>
                <%= f.label :remember_me, class: 'checkbox' do %>
                    <%= f.check_box :remember_me, "data-toggle" => "checkbox" %>
                    Remember me
                <% end %>
              </div>
          <% end %>



          <div><%= f.submit "Sign in", class: 'btn btn-primary btn-lg btn-block' %></div>

          <div class="form-group">
            <%= " " %>
          </div>

          <div class="form-group">
            <%= render "devise/shared/links" %>
          </div>

        </div>
      </div>
  <% end %>

</div>
